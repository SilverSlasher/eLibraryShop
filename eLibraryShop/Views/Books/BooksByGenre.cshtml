@model IEnumerable<Book>

@{
    ViewData["Title"] = "Books";
}

<h1 class="display-4 pb-5">@ViewBag.GenreName</h1>

<div class="row">
    @foreach (var item in @Model)
    {
        <div class="col-4">
            <img src="~/media/books/@item.Image"  width="200" height="200" />
            <h4>@item.Title</h4>

            <div>
                @Html.Raw(item.Description)
            </div>
            <p>
                @item.Price.ToString() Zł
            </p>
            <p>
                <a asp-controller="Cart" asp-action="Add" asp-route-id="@item.Id" class="btn btn-primary">Dodaj do koszyka</a>
            </p>
        </div>
    }
    <div class="d-flex w-100 justify-content-center">
        <pagination page-count="@ViewBag.TotalPages" page-target="/books/@ViewBag.CategorySlug" page-number="@ViewBag.PageNumber" page-range="@ViewBag.PageRange"></pagination>
    </div>

</div>
