@{
    int count = 1;
}

<!-- If you don't have paypal account, neither want to create one, just click "Pay with card" to see the result -->
<form action="https://www.sandbox.paypal.com/pl/cgi-bin/webscr" method="post">
    <input type="hidden" name="cmd" value="_cart">
    <input type="hidden" name="upload" value="1">

    <input type="hidden" name="business" value="eLibraryHost@business.example.com">
    
    @foreach (var item in Model)
    {
        <input type="hidden" name="item_name_@count" value="@item.BookTitle">
        <input type="hidden" name="amount_@count" value="@item.Price">
        <input type="hidden" name="quantity_@count" value="@item.Quantity">
        count++;

    }

    <input type="hidden" name="currency_code" value="PLN">
    <input type="image" src="http://www.paypal.com/en_US/i/btn/x-click-but01.gif" name="submit" alt="Make payments with PayPal - it's fast, free and secure!">
</form>