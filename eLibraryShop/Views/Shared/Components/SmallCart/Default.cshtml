@model SmallCartViewModel

@if (Model != null)
{
    <p>Książki w koszyku: <span class="badge badge-primary">@Model.NumberOfItems</span></p>
    <p>Łącznie: <b>@Model.TotalAmount.ToString() Zł</b></p>
    <a class="btn btn-primary mb-2" asp-controller="Cart" asp-action="Index">Przejrzyj koszyk</a>
    <br />
    <a class="btn btn-danger" asp-controller="Cart" asp-action="Clear">Wyczyść koszyk</a>

}
else
{
    <p class="lead m-0">Koszyk jest pusty</p>
}